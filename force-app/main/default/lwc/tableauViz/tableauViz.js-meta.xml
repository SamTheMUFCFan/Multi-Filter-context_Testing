<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>57.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Tableau Visualization Multi-Filtering</masterLabel>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
        <target>analytics__Dashboard</target>
    </targets>
    <targetConfigs>
    <targetConfig targets="lightning__RecordPage">
            <property
                name="vizUrl"
                type="String"
                label="The URL for the Tableau view"
                required="true"
                description="Click the Share button for the Tableau view. From the Share View dialog box, click Copy Link and paste the URL link here."
                default="https://public.tableau.com/views/LinkedIn-PerformanceOverview/LinkedIn-PerformanceOverview?:showVizHome=no&amp;:embed=true"
            />
            <property
                name="filterOnRecordId"
                type="Boolean"
                default="false"
                description="Filter the Tableau view based on the current Salesforce record. ie 'Account ID'={id}"
                label="Filter based on the current record id"
            />
            <property
                name="showTabs"
                type="Boolean"
                default="false"
                label="Show Tabs"
            />
            <property
                name="showToolbar"
                type="Boolean"
                default="false"
                label="Show Toolbar"
            />
            <property
                name="height"
                type="Integer"
                default="550"
                label="Height"
                required="true"
            />
            <property
                name="tabAdvancedFilter"
                type="String"
                label="Additional Filter: Tableau field name"
                description="Enter the name of the Tableau field you want to filter on. The field needs to be in the Tableau view you are embedding."
            />
            <property
                name="sfAdvancedFilter"
                type="String"
                datasource="apex://ObjectFieldPickList"
                label="Additional Filter: Salesforce object field"
            />
            <supportedFormFactors>
                <supportedFormFactor type="Small" />
                <supportedFormFactor type="Large" />
            </supportedFormFactors>
        </targetConfig>
        <targetConfig
            targets="lightning__AppPage,lightning__HomePage,lightningCommunity__Default, analytics__Dashboard"
        >
            <property
                name="vizUrl"
                type="String"
                label="The URL for the Tableau view"
                required="true"
                description="Click the Share button for the Tableau view. From the Share View dialog box, click Copy Link and paste the URL link here."
                default="https://public.tableau.com/views/LinkedIn-PerformanceOverview/LinkedIn-PerformanceOverview?:showVizHome=no&amp;:embed=true"
            />
            <property
                name="showTabs"
                type="Boolean"
                default="false"
                label="Show Tabs"
            />
            <property
                name="showToolbar"
                type="Boolean"
                default="false"
                label="Show Toolbar"
            />
            <property
                name="height"
                type="Integer"
                default="550"
                label="Height"
                required="true"
            />
            <property
            name="tabAdvancedFilter"
            type="String"
            label="Additional Filter: Tableau field name"
            description="Enter the name of the Tableau field you want to filter on. The field needs to be in the Tableau view you are embedding."
            />
            <property
            name="sfAdvancedFilter"
            type="String"
            datasource="apex://ObjectFieldPickList"
            label="Additional Filter: Salesforce object field"
            />
            <property
            name="tabAdvancedFilter2"
            type="String"
            label="Additional Filter: Tableau field name"
            description="Enter the name of the Tableau field you want to filter on. The field needs to be in the Tableau view you are embedding."
            />
            <property
            name="sfAdvancedFilter2"
            type="String"
            datasource="apex://ObjectFieldPickList"
            label="Additional Filter: Salesforce object field"
            />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
